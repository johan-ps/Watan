CXX = g++
CXXFLAGS = -std=c++14 -Wall -MMD -g -Werror=vla
OBJECTS = main.o board.o tile.o testDisplay.o gameManager.o ./assets/resources/resource.o ./assets/resources/caffeine.o ./assets/developments/criteria/criterion.o ./assets/developments/criteria/assignment.o ./assets/developments/goal/goal.o ./assets/developments/goal/achievement.o ./assets/developments/development.o 
DEPENDS = ${OBJECTS:.o=.d}
EXEC = watan

${EXEC}: ${OBJECTS}
	${CXX} ${CXXFLAGS} ${OBJECTS} -o ${EXEC}

-include ${DEPENDS}

.PHONY: clean

clean:
	rm ${OBJECTS} ${DEPENDS} ${EXEC}
